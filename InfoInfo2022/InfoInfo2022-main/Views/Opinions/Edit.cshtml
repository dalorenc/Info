@model info_2022.Models.Opinion

@{
    ViewData["Title"] = "Edycja opinii";
}

<h1 class="oswald text-primary">Edycja opinii</h1>

<hr />
<div class="row">
    <div class="col-md-4 interspace">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OpinionId" />
            <input type="hidden" asp-for="AddedDate" />
            <input type="hidden" asp-for="TextId" value="@ViewBag.TextId" />
            <input type="hidden" asp-for="Id" value="@ViewBag.Author" />

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <!--<input asp-for="Rating" class="form-control" />-->
                <select asp-for="Rating" class="form-control" asp-items="ViewBag.Rating"></select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Powrót do listy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}