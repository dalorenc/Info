@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    ViewData["Title"] = "Witamy";
}

<div class="container">
    <!-- Kategorie -->
    <div class="row text-center py-5">
        @foreach (var item in Model.DisplayCategories)
        {
            <div class="col-12 col-md-6 col-lg-4 my-3">
                <a class="text-primary" asp-action="Index" asp-asp-controller="Texts" asp-route-Kategoria="@item.CategoryId">
                    <i class="bi-@item.Icon" style="font-size: 4rem;"></i>
                </a>
                <h2 class="oswald">@item.Name</h2>
                <p>@item.Description</p>
            </div>
        }
    </div>
    <!-- Autorzy -->
    <div class="row py-5">
        <div id="carousel-autorzy" class="carousel carousel-dark slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carousel-autorzy" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slid 1"></button>
                @*@for (int i=1;i<=Model.Authors.Count(); i++)
                {
                <button type ="button" data-bs-target="#carousel-autorzy" data-bs-slide-to="@i" aria-label="Slajd @i"></button>
                }*@
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <!-- zminay w celu uzyskania responsywności -->
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <img src="~/photo/mini/autorzy.jpg" alt="autorzy tekstów" class="rounded-circle mx-auto d-block" width="250" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <h2 class="fw-bolder text-success oswald"> Twórcy portalu</h2>
                            <p class="fs-5 py-3">Z portalem współpracują uznani programiści oraz studenci, którzy chcą rozwijać swoje umiejętności i zdobywać doświadczenie praktyczne. Dołącz do naszego zespołu! Zarejestruj się już dziś.</p>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model.Authors)
                {
                    <div class="carousel-item">
                        <div class="row">
                            <div class="col-12 col-lg-4">
                                <img src="@Url.Content(item.Photo == null ? "~/photo/mini/user.png" : "~/photo/mini/" + item.Photo)" alt="@item.FullName" class="rounded-circle mx-auto d-block" width="250">
                            </div>
                            <div class="col-12 col-lg-8">
                                <h2 class="fw-bolder text-success oswald">@item.FirstName</h2>
                                <p class="fs-5 py-3">@item.Information</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

</div>
<!-- Dane adresowe -->
